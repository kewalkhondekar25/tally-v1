generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  workspaces Workspace[]

  @@index([email])
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  owner     User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     File[]
}

model File {
  id             String       @id @default(uuid())
  name           String
  workspaceOwner Workspace    @relation(fields: [workspaceId], references: [id])
  workspaceId    String
  slug           String       @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  formFields     FormFields[]
  responses      Responses[]
}

model FormFields {
  id               String          @id @default(uuid())
  formId           String
  file             File            @relation(fields: [formId], references: [id])
  blockId          Int
  blockName        String
  blockIndex       Int
  blockQuestion    String
  blockPlaceholder String?
  blockOptions     Json?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  fieldResponses   FieldResponses[]
}

model FieldResponses {
  id          String     @id @default(uuid())
  formFieldId String
  formField   FormFields @relation(fields: [formFieldId], references: [id])
  responsesId String
  responses   Responses  @relation(fields: [responsesId], references: [id])
  answer      Json
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Responses {
  id             String          @id @default(uuid())
  formId         String
  files          File            @relation(fields: [formId], references: [id])
  fieldResponses FieldResponses[]
}
